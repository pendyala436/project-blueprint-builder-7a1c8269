{
  "$schema": "https://raw.githubusercontent.com/electron-userland/electron-builder/master/packages/app-builder-lib/scheme.json",
  "appId": "app.meowmeow.dating",
  "productName": "Meow Meow",
  "copyright": "Copyright Â© 2024 Meow Meow",
  "directories": {
    "output": "release",
    "buildResources": "build"
  },
  "files": [
    "dist/**/*",
    "electron/**/*",
    "public/icons/**/*"
  ],
  "extraResources": [
    {
      "from": "public/icons",
      "to": "icons"
    }
  ],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64", "ia32"]
      },
      {
        "target": "portable",
        "arch": ["x64"]
      }
    ],
    "icon": "public/icons/icon-512x512.png",
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}"
  },
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "installerIcon": "public/icons/icon-512x512.png",
    "uninstallerIcon": "public/icons/icon-512x512.png",
    "installerHeaderIcon": "public/icons/icon-512x512.png",
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "Meow Meow"
  },
  "linux": {
    "target": [
      {
        "target": "AppImage",
        "arch": ["x64"]
      },
      {
        "target": "deb",
        "arch": ["x64"]
      },
      {
        "target": "rpm",
        "arch": ["x64"]
      }
    ],
    "icon": "public/icons",
    "category": "Network",
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "desktop": {
      "Name": "Meow Meow",
      "Comment": "Find Your Purrfect Match",
      "Categories": "Network;Chat;InstantMessaging;"
    }
  },
  "mac": {
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      }
    ],
    "icon": "public/icons/icon-512x512.png",
    "category": "public.app-category.social-networking",
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}"
  },
  "dmg": {
    "contents": [
      {
        "x": 130,
        "y": 220
      },
      {
        "x": 410,
        "y": 220,
        "type": "link",
        "path": "/Applications"
      }
    ]
  }
}
